{
    "openapi": "3.0.0",
    "info": {
        "title": "Shop API",
        "description": "HTTP JSON API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://api.dshopv.local",
            "description": "E-shop host"
        }
    ],
    "paths": {
        "/profile": {},
        "/api": {
            "get": {
                "summary": "Home page",
                "requestBody": {
                    "content": {
                        "application/json": {}
                    }
                },
                "responses": {
                    "200": {
                        "description": "HTTP JSON API"
                    }
                }
            }
        },
        "/": {
            "get": {
                "tags": [
                    "Info"
                ],
                "summary": "Show api version number",
                "operationId": "api\\controllers\\SiteController::actionIndex",
                "responses": {
                    "200": {
                        "description": "API version"
                    }
                }
            }
        },
        "/shop/products": {
            "get": {
                "tags": [
                    "CatalogProducts"
                ],
                "summary": "List all products",
                "operationId": "actionIndex",
                "responses": {
                    "200": {
                        "description": "Success response"
                    },
                    "default": {
                        "description": "Unexpected error"
                    }
                },
                "security": [
                    {
                        "Bearer": [],
                        "OAuth2": []
                    }
                ]
            }
        },
        "/shop/products/category/{categoryId}": {
            "get": {
                "tags": [
                    "CatalogProducts"
                ],
                "summary": "List products by category",
                "operationId": "actionCategory",
                "parameters": [
                    {
                        "name": "categoryId",
                        "in": "path",
                        "description": "The id of the products category to retrieve",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success response"
                    },
                    "default": {
                        "description": "Unexpected error"
                    }
                },
                "security": [
                    {
                        "Bearer": [],
                        "OAuth2": []
                    }
                ]
            }
        },
        "/shop/products/brand/{brandId}": {
            "get": {
                "tags": [
                    "CatalogProducts"
                ],
                "summary": "List products by brand",
                "operationId": "actionBrand",
                "parameters": [
                    {
                        "name": "brandId",
                        "in": "path",
                        "description": "The id of the products brand to retrieve",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success response"
                    },
                    "default": {
                        "description": "Unexpected error"
                    }
                },
                "security": [
                    {
                        "Bearer": [],
                        "OAuth2": []
                    }
                ]
            }
        },
        "/shop/products/brand/{tagId}": {
            "get": {
                "tags": [
                    "CatalogProducts"
                ],
                "summary": "List products by tag",
                "operationId": "actionCategory",
                "parameters": [
                    {
                        "name": "tagId",
                        "in": "path",
                        "description": "The id of the products tag to retrieve",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success response"
                    }
                },
                "security": [
                    {
                        "Bearer": [],
                        "OAuth2": []
                    }
                ]
            }
        },
        "/shop/products/{productId}": {
            "get": {
                "tags": [
                    "ProductView"
                ],
                "summary": "The product data",
                "operationId": "actionView",
                "parameters": [
                    {
                        "name": "productId",
                        "in": "path",
                        "description": "ID of product",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success response"
                    },
                    "default": {
                        "description": "Unexpected error"
                    }
                },
                "security": [
                    {
                        "Bearer": [],
                        "OAuth2": []
                    }
                ]
            }
        },
        "/user/profile": {
            "get": {
                "tags": [
                    "Profile"
                ],
                "description": "Returns information about current user",
                "operationId": "api\\controllers\\user\\ProfileController::actionIndex",
                "responses": {
                    "200": {
                        "description": "Success response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/user_profile"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "Bearer": [],
                        "OAuth2": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "ErrorModel": {
                "required": [
                    "code",
                    "message"
                ],
                "properties": {
                    "code": {
                        "title": "Code",
                        "description": "The error code",
                        "type": "integer",
                        "format": "int32"
                    },
                    "message": {
                        "title": "Message",
                        "description": "The error description",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "user_profile": {
                "description": "Current user profile information"
            }
        },
        "securitySchemes": {
            "OAuth2": {
                "type": "oauth2",
                "flows": {
                    "password": {
                        "authorizationUrl": "http://api.dshopv.local/oauth2/token",
                        "scopes": {
                            "read:products": "read products infomation",
                            "read:cart": "read infomation about products in cart",
                            "write:cart": "add or remove products to cart",
                            "read:wishlist": "read infomation about products in wishlist",
                            "write:wishlist": "add or remove products to wishlist"
                        }
                    }
                }
            },
            "Bearer": {
                "type": "apiKey",
                "name": "AuthorizationToken",
                "in": "header"
            }
        }
    }
}
